<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <BitmapImage x:Key="EditImage" UriSource="Image\record.edit.dark.png" />
    <BitmapImage x:Key="DeleteImage" UriSource="Image\record.delete.dark.png" />
    <Style x:Key="OuterTable" TargetType="{x:Type DataGrid}" BasedOn="{StaticResource {x:Type DataGrid}}">
        <Setter Property="FontSize" Value="13" />
    </Style>
    <Style x:Key="InnerTableHeader" TargetType="{x:Type DataGridColumnHeader}"
           BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
        <Setter Property="FontSize" Value="12" />
    </Style>
    <Style x:Key="InnnerTable" TargetType="{x:Type DataGrid}" BasedOn="{StaticResource {x:Type DataGrid}}">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Margin" Value="10" />
    </Style>
</ResourceDictionary>