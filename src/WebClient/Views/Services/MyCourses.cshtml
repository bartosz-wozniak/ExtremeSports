@using WebClient.Models
@model MyCoursesViewModel
@{
    ViewBag.Title = "MyServices";
}
<link rel="stylesheet" href="../../TableCss.css" type="text/css" />
@if (Request.IsAuthenticated)
{
    <h2>Kursy na które jestes zapisany:</h2>
    <div class="CSSTableGenerator">
        <table>
            <tr>
                <td>Numer</td>
                <td>Sport</td>
                <td>Nazwa</td>
                <td>Instruktor</td>
                <td>Daty</td>
                <td></td>
            </tr>
            @foreach (var c in Model.Courses)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.SportName</td>
                    <td>@c.ServiceTypeName</td>
                    <td>@c.InstructorFullName</td>
                    <td>
                        <table>
                            @foreach (var d in c.Dates)
                            {
                                <tr><th>@d</th></tr>
                            }
                        </table>
                    </td>
                    <td>
                        @Html.ActionLink("Wypisz się z kursu", "CheckOutOfCourse", "Services", new { id = @c.Id }, null)
                    </td>
                </tr>
            }
        </table>

    </div>
}
else
{
    <p>Zaloguj się!</p>
}

